{
  presets: [
    '@babel/preset-stage-0',
    [
      '@babel/preset-env',
      {
        modules: 'commonjs',
      },
    ],
    '@babel/preset-flow',
    'next/babel',
  ],
  plugins: [
    [
      'import',
      {
        libraryName: 'antd',
      },
    ],
    [
      'styled-components',
      {
        ssr: true,
        displayName: true,
        preprocess: false,
      },
    ],
    [
      'transform-imports',
      {
        lodash: {
          transform: 'lodash/${member}',
          preventFullImport: true,
        },
        'rxjs/operator': {
          transform: 'rxjs/operator/${member}',
          preventFullImport: true,
          camelCase: true,
          skipDefaultConversion: true,
        },
        'rxjs/observable': {
          transform: 'rxjs/observable/${member}',
          camelCase: true,
          preventFullImport: true,
          skipDefaultConversion: true,
        },
      },
    ],
  ],
}
